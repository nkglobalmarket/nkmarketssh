#!/bin/bash

echo "NK MARKET SETUP"
echo "Bu script, nkmarketvip dosyasını indirip nkmarket olarak kaydedecek."

read -p "Devam etmek istiyor musunuz? (Evet(e)/Hayır(h)): " response

if [[ $response =~ ^[EeYy]$ ]]; then
    if [ -f nkmarket ]; then
        mv nkmarket nkmarket_backup
        echo "Mevcut 'nkmarket' dosyası yedeklenerek 'nkmarket_backup' olarak adlandırıldı."
    fi

    wget https://raw.githubusercontent.com/nkglobalmarket/nkmarketssh/master/nkmarketvip -O nkmarket
    chmod +x nkmarket
    echo "nkmarketvip dosyası başarıyla indirildi ve nkmarket olarak kaydedildi."
    echo "Artık 'nkmarket' komutunu kullanabilirsiniz."
else
    echo "İşlem iptal edildi. Script kapatılıyor."
fi